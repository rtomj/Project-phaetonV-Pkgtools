#!/usr/5bin/sh

##
## pkgbuild builds ports from their mkport files
##

# include pkgconf (must be in $PATH)
. pkgconf

usage() {
    echo "usage: pkgbuild category/port"
}

if [  $USER != root ]
then
    usage
    echo "You must be root to build packages"
    exit 1
elif [ $USER = root ]
then
    cd $PKG_LOC/$1
    ./mkport
else
    usage
fi

